<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kris.siweidaotu"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/IOScheds"
        >
        <activity
            android:name="com.kris.siweidaotu.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <!-- 文字-四个节点引导 -->
        <activity
            android:name=".ui.TextFourNodeActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustResize" 
            />
        
        <!-- 文字-八个节点引导 -->
        <activity
            android:name=".ui.TextEightNodeActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustResize" 
            />
        
        <!-- 文字-十二个节点引导 -->
        <activity
            android:name=".ui.TextTwelveNodeActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustResize" 
            />
        
        <!-- 关于我们-->
        <activity
            android:name=".ui.AboutUsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" 
            />
        
       <!-- 设置-->
        <activity
            android:name=".ui.SettingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" 
            />
        
        <!-- 注册-->
        <activity
            android:name=".ui.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" 
            />
        
        
        
        
    </application>

</manifest>
