<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_one_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
            
             <TextView
                android:id="@+id/text_two_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />

            <TextView
                android:id="@+id/text_three_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
            
            <TextView
                android:id="@+id/text_four_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_twelve_node1" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_twelve_node2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/icon_twelve_node3" />
            
             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_twelve_node4" />
            
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_five_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />

            <TextView
                android:id="@+id/text_six_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/icon_eight_node3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_eight_node4" />
        </LinearLayout>
        
        

        <TextView
            android:id="@+id/text_seven_node_tv"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/circular_bead_border_white"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_red_color"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/icon_eight_node5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_eight_node6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_eight_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                 android:layout_marginTop="30dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />

            <TextView
                android:id="@+id/text_nine_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_twelve_node9" />
            
               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_twelve_node10" />

           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/icon_twelve_node11" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_twelve_node12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_ten_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
            
            <TextView
                android:id="@+id/text_eleven_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />

            <TextView
                android:id="@+id/text_twelve_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
            
              <TextView
                android:id="@+id/text_thirteen_node_tv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular_bead_border_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_red_color" />
        </LinearLayout>
        
    </LinearLayout>
    

    <com.kris.siweidaotu.ui.view.UnScrollGridView
        android:id="@+id/node_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="0.0dip"
        android:verticalSpacing="2dip" 
        android:listSelector="@null"
        android:numColumns="7"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchMode="columnWidth"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

</LinearLayout>
</ScrollView>
