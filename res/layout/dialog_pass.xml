<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white" 
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/dialog_text1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="恭喜你"
        android:textColor="@color/common_theme_color"
        android:textSize="28dp" 
        />

    <TextView
        android:id="@+id/dialog_text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="通过[文字导图-4个节点]考试"
        android:textColor="@color/common_theme_color"
        android:textSize="20dp" />
    
     <TextView
        android:id="@+id/dialog_text4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textColor="@color/common_theme_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dialog_text3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="通关时间:2017-03-06 21:18:09"
        android:textColor="@color/common_theme_color"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue_bg_color"
            android:gravity="center"
            android:padding="10dp"
            android:text="再次训练"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange_bg_color"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>